<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.google.face2face.backend.Servlet</servlet-class>
 </servlet>

    <servlet>
        <servlet-name>MatchingServlet</servlet-name>
        <servlet-class>com.google.face2face.backend.servlets.MatchingServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EventNotifierServlet</servlet-name>
        <servlet-class>com.google.face2face.backend.servlets.EventNotifierServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GiftSendingServlet</servlet-name>
        <servlet-class>com.google.face2face.backend.servlets.GiftSendingServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ShareEmailServlet</servlet-name>
        <servlet-class>com.google.face2face.backend.servlets.ShareEmailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventNotifierServlet</servlet-name>
        <url-pattern>/event_handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MatchingServlet</servlet-name>
        <url-pattern>/match</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GiftSendingServlet</servlet-name>
        <url-pattern>/send_gift</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShareEmailServlet</servlet-name>
        <url-pattern>/share_email</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>