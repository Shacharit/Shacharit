<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:startColor="#ff0000" android:endColor="#800000"  />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <gradient android:angle="-90" android:startColor="#808080" android:endColor="#eeeeee"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <gradient android:angle="-90" android:startColor="#eeeeee" android:endColor="#dddddd" />
        </shape>
    </item>
</selector>