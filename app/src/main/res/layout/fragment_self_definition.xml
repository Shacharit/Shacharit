<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.shaharit.face2face.OtherDefinitionFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/fragment_self_definition_outer_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom">
        <TextView
            android:id="@+id/textViewOtherLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/selfLabel"
            android:gravity="center"
            android:textSize = "20dp"
            android:layout_gravity="top|start" />
        <RelativeLayout
            android:id="@+id/fragment_self_definition_inner_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@null"
                android:id="@+id/fragment_self_definition_next_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/previous"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@null"
                android:id="@+id/buttonPrevious"
                android:layout_toLeftOf="@id/fragment_self_definition_next_button"
                android:layout_toStartOf="@id/fragment_self_definition_next_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"/>
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLargeInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
            <ScrollView
                android:id="@+id/fragment_self_definition_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:layout_above="@id/fragment_self_definition_next_button">
                <org.shaharit.face2face.FlowLayout
                    android:id="@+id/fragment_self_definition_flow_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:textDirection="rtl"
                    android:padding="20dp"/>
            </ScrollView>
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>
